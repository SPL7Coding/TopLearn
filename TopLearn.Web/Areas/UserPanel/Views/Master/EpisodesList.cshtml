@model IEnumerable<TopLearn.DataLayer.Entities.Course.CourseEpisode>

@{
    ViewData["Title"] = "مدیریت قسمت ها";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page"> @ViewData["Title"] </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header class="display-flex">
                            <h1> @ViewData["Title"] </h1>
                            <a asp-action="AddEpisode" asp-controller="Master" asp-route-courseId="@ViewBag.CourseId" class="btn btn-success">افزودن قسمت جدید</a>
                        </header>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>عنوان</th>
                                    <th>زمان</th>
                                    <th>وضعیت</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.EpisodeTitle
                                        </td>
                                        <td>
                                            @item.EpisodeTime
                                        </td>
                                        <td>
                                            @if (item.IsFree)
                                            {
                                                <span class="success">رایگان</span>
                                            }
                                            else
                                            {
                                                <span class="danger">پولی</span>
                                            }
                                        </td>
                                        <td>
                                            <a class="btn btn-success" asp-action="DownloadFile" asp-controller="Course" asp-route-episodeId="@item.EpisodeId">دانلود</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>
